{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2015.core", "es2016"],
        "target": "es5",
        "sourceMap": false,

        "declaration": true,
        "rootDir": "./lib",
        "outDir": "./bin",

        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}
