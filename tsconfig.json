{
    "files": [
        "lib/index.ts",
        "lib/tester.ts",
        "lib/cli.ts"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["esnext"],
        "target": "es2015",
        "sourceMap": false,

        "declaration": true,
        "rootDir": "./lib",
        "outDir": "./bin",

        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}
